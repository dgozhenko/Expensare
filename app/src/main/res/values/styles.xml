<?xml version="1.0" encoding="utf-8"?>
<resources>

    // Toolbar

    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/light_black</item>
    </style>

    // Toolbar Title

    <style name="ToolbarTitle" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">@color/light_black</item>
        <item name="fontFamily">@font/noah_bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    // App Text

    <style name="AppText" parent="Widget.MaterialComponents.TextView">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>
</resources>